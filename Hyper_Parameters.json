{
    "Pattern": {
        "Lexicon_File": "Pronunciation_Data_1K.New.txt",
        "Wav_Path": "D:/EARShot_Temp/WAV",
        "Pattern_Path": "D:/EARShot_Temp/Pattern",
        "Metadata_File": "METADATA.PICKLE",
        
        "Acoustic": {
            "Mode": "Spectrogram",
            "Spectrogram": {
                "Sample_Rate": 22050,
                "Dimension": 256,
                "Frame_Length": 10,
                "Frame_Shift": 10
            },
            "Mel": {
                "Sample_Rate": 22050,
                "Spectrogram_Dimension": 1025,
                "Dimension": 80,
                "Frame_Length": 10,
                "Frame_Shift": 10,
                "Max_Abs": 4
            }
        },
        "Semantic": {
            "Mode": "SRV",
            "SRV": {
                "Size": 300,
                "Assign_Number": 30
            },
            "PGD": {
                "Size": 300,
                "Dict_File_Path": "Word2Vec.Paper1K.Kevin.pydb"
            }            
        }
    },

    "Model": {
        "Prenet": {
            "Use": false,
            "Filters": [128, 128, 128],
            "Kernel_Sizes": [5, 5, 5],
            "Strides": [1, 1, 1],
            "Use_Batch_Normalization": true,
            "Dropout_Rate": 0.5            
        },
        "Hidden": {
            "Type": "LSTM",
            "Size": 512,
            "No_Reset_State": true
        },
        "Weight_Regularization": {
            "Use": false,
            "Rate": 1e-6
        }
    },

    "Train": {
        "Use_Pattern_Cache": true,
        "Batch_Size": 10000,
        "Learning_Rate": {
            "Use_Noam": true,
            "Initial": 1e-3,
            "Warmup_Step": 4000,
            "Min": 1e-5
        },
        "ADAM": {
            "Beta1": 0.9,
            "Beta2": 0.999,
            "Epsilon": 1e-7
        },
        "Test_Only_Identifier_List": ["JM", "EO"],
        "Max_Epoch_with_Exclusion": 6000,
        "Max_Epoch_without_Exclusion": 8000,
        "Max_Queue": 100,
        "Exclusion_Mode": "M",
        "Checkpoint_Save_Timing": 1000,
        "Test_Timing": 2000
    },

    "Use_Mixed_Precision": true,
    "Result_Path": "./Results",
    "Split_Result_Size": true,
    "Device": "0"
}